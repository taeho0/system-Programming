public class S21211_00 {
   public static void main(String[] args) {
      int sum1 = 0;
      int sum2 =0;
      for (int cnt = 1; cnt < 11; cnt++) {

         if(cnt%2 == 1)
            sum1 += cnt;
         else
            sum2 += cnt;
         
         System.out.println("cnt가" + cnt + "일 때 : " + "홀수에 합 : " + sum1 + ", 짝수에 합 " + sum2 + ", 전체에 합 : " + (sum1 + sum2));
      }
   }
}
